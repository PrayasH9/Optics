<%- include("../partials/header") %>

<header class="jumbotron">
	<div class="container">
		<h1>Welcome to Optics</h1>
		<p>
			Have Fun by Sharing an Image!!
		</p>
		<p>
			<a class="btn btn-primary btn-lg" href="/optics/new">Add A New Image</a>
		</p>
	</div>
</header>

<div class="row text-center">
	<div class="col-md-12">
		<% if(noMatch !== null) { %>
		<h3><%= noMatch %></h3>
			<form action="/optics" method="GET" class="form-inline">
				<div class="form-group">
					<input type="text" name="search" placeholder="Optics search..." class="form-control">
					<input type="submit" value="Search" class="btn btn-default">
				</div>
			</form>
		<% } %>
	</div>

	<div class="card-columns">
	<% optics.forEach(function(optics){ %>
	<div class="col-md-12 col-sm-12 mb-2">
		<div class="card card-pin">
			<img src="<%= optics.image %>" class="card-img" alt="<%= optics.name %>">
			<div class="overlay">
				<h5 class="card-title title"><%=optics.name %></h5>
				<div class="likes">
					<div class="btn-group">
						<% if (currentUser && optics.likes.some(function (like) {
							return like.equals(currentUser._id)
						})) { %>
						<button class="btn btn-sm btn-primary">
							<i class="fas fa-thumbs-up"></i>
						</button>
						<% } else { %>
						<button class="btn btn-sm btn-secondary">
							<i class="fas fa-thumbs-up"></i>
						</button>
						<% } %>
					</div>
				</div>
				<div class="more">
					<a href="/optics/<%= optics.slug %>" class="btn btn-primary"><i class="far fa-arrow-alt-circle-right"></i>More Info</a>
				</div>
			</div>
		</div>
	</div>
	<% }); %>
	</div>
</div>

<nav aria-label="Page navigation">
	<% if (pages && pages > 0) { %>
	<ul class="pagination justify-content-center">
		<% if (current == 1) { %>
		<li class="page-item disabled"><a class="page-link">First</a></li>
		<% } else { %>
		<li><a class="page-link" href="/optics">First</a></li>
		<% } %>

		<% if (current == 1) { %>
		<li class="page-item disabled"><a class="page-link">«</a></li>
		<% } else { %>
		<li><a class="page-link" href="/optics?page=<%= Number(current) - 1 %>">«</a></li>
		<% } %>

		<% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
		<% if (i !== 1) { %>
		<li class="page-item disabled"><a class="page-link">...</a></li>
		<% } %>
		<% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
		<% if (i == current) { %>
		<li class="active"><a class="page-link"><%= i %></a></li>
		<% } else { %>
		<li><a class="page-link" href="/optics?page=<%= i %>"><%= i %></a></li>
		<% } %>
		<% if (i == Number(current) + 4 && i < pages) { %>
		<li class="page-item disabled"><a class="page-link">...</a></li>
		<% } %>
		<% } %>

		<% if (current == pages) { %>
		<li class="page-item disabled"><a class="page-link">»</a></li>
		<% } else { %>
		<li><a class="page-link" href="/optics?page=<%= Number(current) + 1 %>">»</a></li>
		<% } %>

		<% if (current == pages) { %>
		<li class="page-item disabled"><a class="page-link">Last</a></li>
		<% } else { %>
		<li><a class="page-link" href="/optics?page=<%= pages %>">Last</a></li>
		<% } %>
	</ul>
	<% } %>
</nav>

<%- include("../partials/footer") %>