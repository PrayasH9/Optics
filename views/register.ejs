<%- include("./partials/header") %>

<div class="row">
	<div class="col-md-12">
		<form class="form-signin" action="/register" method="POST" enctype="multipart/form-data">
			<h1 class="h3 mb-3 font-weight-normal">Please Sign Up</h1>
			<label for="inputUsername" class="sr-only">Username</label>
			<input type="text" id="inputUsername" class="form-control" name="user[username]" placeholder="Username" required autofocus>
			<label for="inputPasswordSignUp" class="sr-only">Password</label>
			<input type="password" id="inputPasswordSignUp" class="form-control" name="password" placeholder="Password" required>
			<label for="inputFirstName" class="sr-only">Firstname</label>
			<input type="text" id="inputFirstName" class="form-control" name="user[firstName]" placeholder="Firstname" required>
			<label for="inputLastName" class="sr-only">Lastname</label>
			<input type="text" id="inputLastName" class="form-control" name="user[lastName]" placeholder="LastName" required>
			<label for="inputEmail" class="sr-only">Email</label>
			<input type="email" id="inputEmail" class="form-control" name="user[email]" placeholder="john@doe.com" required>
			<label for="avatar">Profile Pic</label>
			<input type="file" id="avatar" name="avatar" accept="image/*" required>
			<label for="inputDescription" class="sr-only">Description</label>
			<input type="text" id="inputDescription" class="form-control" name="user[description]" placeholder="Say somthing about you" required>
			<label for="inputAdminCode" class="sr-only">AdminCode</label>
			<input type="password" id="inputAdminCode" class="form-control" name="adminCode" placeholder="Admin Code(For Admin Only)">
		    <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
		</form>
		<div class="form-signin">
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

<%- include("./partials/footer") %>